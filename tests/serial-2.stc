test "change transitions and reboot"

load boiler.stc
load thermostat.stc

go 2000000

Serial.tx = "PR=T\r"
go 3000000
check {PR: T=..} {PR: T=11}

Serial.tx = "IT=0\r"
go 3200000

# Push the reset button
RST.state = closed
go 3210000
RST.state = open

go 5200000
check {OpenTherm Gateway \d+\.\d+}

Serial.tx = "PR=T\r"
go 6200000
check {PR: T=..} {PR: T=01}

Serial.tx = "PR=V\r"
go 6400000
check {PR: V=.} {PR: V=5}

eeprom 0 0x57
