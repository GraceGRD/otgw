test "on/off thermostat with max ch update"

load boiler.stc

Thermostat.mode = off
go 16000000

Serial.tx = "SH=60\r"
go 32000000
check R.000.... R00000000
check R.001.... R10010000

mark
Thermostat.mode = on
go 48000000

Serial.tx = "SH=58\r"
go 64000000
check R.000.... R80000100
check R.001.... R10013C00
check R.00E.... R900E6400

mark
Thermostat.mode = off
go 80000000

Serial.tx = "SH=55\r"
go 96000000
check R.000.... R00000000
check R.001.... R10010000
